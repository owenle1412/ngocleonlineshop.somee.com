@using OnlineShop.Models
@model List<CartItem>


<div class="cart">
    <p>
        Chào mừng bạn đến với website! <a href="/gio-hang" style="text-decoration:none"><span>Giỏ hàng:</span></a>
        <div id="dd" class="wrapper-dropdown-2">
    @(Model.Count) sản phẩm
    @if (Model.Count == 0)
    {
        <ul class="dropdown">
            <li>Không có sản phẩm nào trong giỏ hàng</li>
        </ul>
    }
    else
    {
        <ul class="dropdown">
            <li>Bạn có @Model.Count sản phẩm trong giỏ</li>
        </ul>
    }
    </div>
    </p>
</div>
